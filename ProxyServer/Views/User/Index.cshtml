
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>List Proxy</h2>

@foreach (System.Collections.DictionaryEntry proxy in (System.Collections.Hashtable)ViewData["ListProxy"])
{
    <div>
        <b>id:</b> @proxy.Key<br />
        <b>host:</b> @proxy.Value<br />
        <button> @Html.ActionLink("Delete", "Delete", "Proxy", new { id = proxy.Key }, new { @class = "modal-link1", @OnClick = "return confirm('Are you sure you to delete this Record?');" })</button>
    </div>
}
